package TP2;

public class Etagere {

	//attribut
	private int nbLivre;
	private Livre[] etagere;

	//constructeurs}
	public Etagere(int capacite) {
		this.nbLivre  = 0;
		this.etagere = new Livre[capacite];
	}
	
	public void ajouter(Livre l) {
		if (nbLivre < etagere.length ) {
			etagere[nbLivre] = l;
			nbLivre = nbLivre + 1;
		}
	}
	
	public int getNbLivres() {
		return nbLivre;
	}
	
	public Livre chercher(String auteur,String titre) {
		Livre res = null;
		for(int i = 0; i< nbLivre; i++) {
			if (etagere[i].getAuteur().equals(auteur) && etagere[i].getTitre().equals(titre)){
				res =  etagere[i];
			}
		}
		return res;
	}
	
	public String toString() {
		String res = "etagere : ";
		for (Livre l : etagere) {
			res = res + l + ", ";
		}
		return res;
	}
}
